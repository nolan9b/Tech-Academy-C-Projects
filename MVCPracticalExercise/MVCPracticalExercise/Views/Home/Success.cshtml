@using MVCPracticalExercise.Models
@model Quote

<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Your Insurance Quote</h5>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col">
                    @Model.FirstName
                </div>
                <div class="col">
                    @Model.LastName
                </div>
                <div class="col">
                    @Model.EmailAddress
                </div>
                <div class="col">
                    $
                    @Model.Price
                    Per Month
                </div>
            </div>
        </div>
    </div>
</div>