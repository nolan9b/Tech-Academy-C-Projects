@using HomeInventory.Models
@model List<InventoryItem>

<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Inventory Items</h5>
        </div>
        <div class="card-body">
            @foreach (var item in Model)
            {
                <input type="hidden" name="Id" value="@item.Id" />
                <div class="row mb-3">
                    <div class="col-2">
                        @item.Name
                    </div>
                    <div class="col">
                        @item.Location
                    </div>
                    <div class="col-4">
                        @item.Quantity
                    </div>
                </div>
            }
            <br/>
            @using (Html.BeginForm("ReturnToMenu", "ViewItems", FormMethod.Post))
            {
                <button type="submit" class="btn btn-primary btn-block">
                    Return to Menu
                </button>
            }
        </div>
    </div>
</div>