@using HomeInventory.Models
@model List<InventoryItem>

<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Edit Inventory Items</h5>
        </div>
        <div class="card-body no-gutters">
            @foreach (var item in Model)
            {
                using (Html.BeginForm("ModifyItem", "Edit", FormMethod.Post))
                {
                    <input type="hidden" name="Id" value="@item.Id" />
                    <div class="row mb-3">
                        <div class="col-3">
                            @item.Name
                        </div>
                        <div class="col-3">
                            @item.Location
                        </div>
                        <div class="col-2">
                            @item.Quantity
                        </div>
                        <div class="col-2">
                            <button name="submit" id="edit" value="edit" type="submit" class="btn btn-dark btn-block">
                                Edit Item
                            </button>
                        </div>
                        <div class="col-2">
                            <button name="submit" id="delete" value="delete" type="submit" class="btn btn-danger btn-block">
                                Delete Item
                            </button>
                        </div>
                    </div>
                }
            }
            <br />
            @using (Html.BeginForm("ReturnToMenu", "Edit", FormMethod.Post))
            {
                <button type="submit" class="btn btn-primary btn-block">
                    Return to Menu
                </button>
            }
        </div>
    </div>
</div>